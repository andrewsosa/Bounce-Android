<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tile_checkbox"
        android:checked="false"
        android:gravity="center"
        android:textAlignment="gravity"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:id="@+id/tile_header"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/primaryTextDark"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="72dp"
        android:maxLines="1"
        android:lines="1"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Due Date"
        android:id="@+id/tile_subheader"
        android:textSize="14sp"
        android:textColor="@color/secondaryTextDark"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/tile_header"
        android:layout_toEndOf="@+id/row_icon"
        android:layout_alignLeft="@+id/tile_header"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
